<% include partials/header %>

<div class="ui text container">
    <div class="ui huge header">
        <h1>Welcome</h1>
    </div>
    <% friends.forEach(function(friend) { %>
    <div class="ui segment">
        <h2><%= friend.name %></h2>
        <img class="ui rounded image" src="<%= friend.image %>">
        <span><%= friend.created.toDateString() %></span>
        <% if(friend.text != null) { %>
            <h5> <%= friend.text.substring(0, 100) %>...</h5>
        <% } %>
        <a href="/friends/<%= friend._id %>">
            <button class="ui right labeled secondary icon button">
                <i class="right arrow icon"></i>
                Read more
            </button>
        </a>
    </div>
    <% }) %>    
</div>
<% include partials/footer %>
