<% include ../partials/header %>

<div class="ui container segment">
    <div class="ui header">
        <h1>Add Comment</h1>
    </div>
    <form class="ui form" action="/friends/<%= friend._id %>/comments" method="POST">
        <div class="field">
            <label>Name</label>
            <input type="text" name="comment[author]">    
        </div>
        <div class="field">
            <label>Text</label>
            <input type="text" name="comment[text]">
        </div>
        
        <div class="ui buttons">
          <button class="ui button" type="reset">Cancel</button>
          <div class="or"></div>
          <button class="ui positive button" type="submit">Save</button>
        </div>
    </form>
</div>

<% include ../partials/footer %>