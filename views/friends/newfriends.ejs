<% include ../partials/header %>

<div class="ui container segment">
    <div class="ui header">
        <h1>Add New Friend</h1>
    </div>
    <form class="ui form" action="/friends" method="POST">
        <div class="field">
            <label>Name</label>
            <input type="text" name="friend[name]" placeholder="Name">    
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="friend[image]" placeholder="Image link here">    
        </div>
        <div class="field">
            <label>Text</label>
            <textarea name="friend[text]" placeholder="Write anything..."></textarea>
        </div>
        
        <div class="ui buttons">
          <button class="ui button" type="reset">Cancel</button>
          <div class="or"></div>
          <button class="ui positive button" type="submit">Save</button>
        </div>
    </form>
</div>

<% include ../partials/footer %>